    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dip"
        android:background="#FFF59D"
        android:gravity="center"
        android:text="@string/player_Select_Text"
        android:textColor="#9E7F57"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F6E6E6">

            <LinearLayout
                android:id="@+id/deck_Remain"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:background="#E8EAF6"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_Deck"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        app:srcCompat="@mipmap/card_stack" />

                    <TextView
                        android:id="@+id/textView_deck_Counter"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="x23"
                        android:textSize="24sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView_deck_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E3F2FD"
                    android:gravity="center"
                    android:text="@string/deck_Text"
                    android:textColor="#9E7F57"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/taken_Card"
                android:layout_width="109dp"
                android:layout_height="167dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/chosen_Card"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/material_on_background_disabled"
                    android:scaleType="fitXY"
                    app:srcCompat="@mipmap/c_null" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E3F2FD"
                    android:gravity="center"
                    android:text="製作的料理"
                    android:textColor="#9E7F57"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/hint_message"
                android:layout_width="190dp"
                android:layout_height="77dp"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_toStartOf="@+id/action_Button"
                android:layout_toLeftOf="@+id/action_Button"
                android:background="#E8EAF6"
                android:text="玩家提示" />

            <Button
                android:id="@+id/action_Button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/kk"
                android:onClick="on_test_ButtonClicked"
                android:text="OK"
                android:textColor="@color/design_default_color_secondary_variant"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <LinearLayout
                android:id="@+id/token"
                android:layout_width="157dp"
                android:layout_height="62dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_toStartOf="@+id/deck_Remain"
                android:layout_toLeftOf="@+id/deck_Remain"
                android:layout_weight="1"
                android:background="#C5CAE9"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#E8EAF6"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/button_Hand1"
                        android:layout_width="20dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="3dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@color/material_on_background_disabled"
                        android:scaleType="fitXY"
                        tools:srcCompat="@mipmap/coin_null" />

                    <ImageButton
                        android:id="@+id/button_Hand2"
                        android:layout_width="20dp"
                        android:layout_height="40dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@color/material_on_background_disabled"
                        android:scaleType="fitXY"
                        tools:srcCompat="@mipmap/coin_null" />

                    <ImageButton
                        android:id="@+id/button_Hand3"
                        android:layout_width="20dp"
                        android:layout_height="40dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@color/material_on_background_disabled"
                        android:scaleType="fitXY"
                        tools:srcCompat="@mipmap/coin_null" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E3F2FD"
                    android:gravity="center"
                    android:text="拿取的食材"
                    android:textColor="#9E7F57"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>